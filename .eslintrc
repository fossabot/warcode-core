{
  "env": {
    "es6": true,
    "node": true,
    "jest": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "plugin:fp/recommended",
    "plugin:jest/recommended"
  ],
  "plugins": [
    "flowtype",
    "fp",
    "jest"
  ],
  "rules": {
    "class-methods-use-this": ["error", { "exceptMethods": ["action"] }],
    "max-len": "warn",
    "no-underscore-dangle": [ "error", { "allowAfterThis": true } ],
    "prefer-default-export": 0,
    "import/prefer-default-export": "warn",
    "fp/no-class": "warn",
    "fp/no-nil": 0,
    "fp/no-this": 0,
    "fp/no-throw": 0,
    "fp/no-unused-expression": 0
  }
}
